{
    "manifest_version": 3,
    "name": "AI COMPANION",
    "version": "1.0",
    "description": "A Chrome extension built with React",
    "action": {
      "default_popup": "../index.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "permissions": [
      "activeTab"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "web_accessible_resources": [
      "https://lottie.host/390b8617-164c-4aa2-8f2b-9cd346762825/M6dOfIJtO1.json"
    ]
  }