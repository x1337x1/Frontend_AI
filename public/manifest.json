{
    "manifest_version": 3,
    "name": "AI COMPANION",
    "version": "1.0",
    "description": "A Chrome extension built with React",
    "action": {
      "default_popup": "../index.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "permissions": [
      "activeTab"
    ],
    "background": {
      "service_worker": "background.js"
    }
  }